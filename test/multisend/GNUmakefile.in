VPATH		= @abs_srcdir@
SUBDIRS         =
NOTBUILT        = 
APPS            =  multicast.${EXTENSION} multicast_as.${EXTENSION}
APPS            += multicast_global.${EXTENSION}
APPS            += multicast_local.${EXTENSION} multicast_local_as.${EXTENSION} 
APPS            += multicast_pwq.${EXTENSION} multicast_pwq_as.${EXTENSION}
APPS            += multicombine_global.${EXTENSION}
APPS            += multisync_global.${EXTENSION} 

include @abs_top_builddir@/Build.rules

ifeq (@BUILDENV@,ade)
%.${EXTENSION}: %.c
	cp ${CROSS_CRT1} .
	cp ${CROSS_CRTI} .
	cp ${CROSS_CRTN} .
	${CROSS_CC} -I${INSTALL_DIR}/include  ${CROSS_CFLAGS} $< -o $@ ${CROSS_LDFLAGS} -lm -L${CROSS_TOOLCHAIN_LDPATH} @POELIB@ @IBMMPILIB@ 
	rm `basename ${CROSS_CRT1}`
	rm `basename ${CROSS_CRTI}`
	rm `basename ${CROSS_CRTN}`
%.${EXTENSION}: %.cc
	cp ${CROSS_CRT1} .
	cp ${CROSS_CRTI} .
	cp ${CROSS_CRTN} .
	${CROSS_CXX} -I${INSTALL_DIR}/include  ${CROSS_CXXFLAGS} $< -o $@ ${CROSS_LDFLAGS} -lm -L${CROSS_TOOLCHAIN_LDPATH} @POELIB@ @IBMMPILIB@ 
	rm `basename ${CROSS_CRT1}`
	rm `basename ${CROSS_CRTI}`
	rm `basename ${CROSS_CRTN}`
else

%.${EXTENSION}: %.c
	${CROSS_CC} -I${INSTALL_DIR}/include ${CROSS_CFLAGS} $< -o $@ ${CROSS_LDFLAGS} -L../../../../${INSTALL_DIR}/lib
%.${EXTENSION}: %.cc
	${CROSS_CXX} -I${INSTALL_DIR}/include ${CROSS_CXXFLAGS} $< -o $@ ${CROSS_LDFLAGS} -L../../../../${INSTALL_DIR}/lib
%.${EXTENSION}: %.cpp
	${CROSS_CXX} -I${INSTALL_DIR}/include ${CROSS_CXXFLAGS} $< -o $@ ${CROSS_LDFLAGS} -L../../../../${INSTALL_DIR}/lib

endif

default: ${APPS}


runmesa:
	BG_SHAREDMEMSIZE=1 @BGFLOOR@/scripts/runfctest.sh \
	--ttype cnk \
	--parmstest ${VPATH}/test.parms \
	--program multicast_global.cnk \
	--svchost ${VPATH}/pers.svchost \
	--numcores 1 \
	$(parms)

runmambo:
	BG_SHAREDMEMSIZE=1 @BGFLOOR@/scripts/runfctest.sh \
	--ttype cnk \
	--parmstest ${VPATH}/test.parms \
	--program multicast_global.cnk \
	--svchost ${VPATH}/pers.svchost \
	--script runMambo \
	$(parms)

runfpga:
	BG_SHAREDMEMSIZE=1 @BGFLOOR@/scripts/runfctest.sh \
	--ttype cnk \
	--parmstest ${VPATH}/test.parms \
	--program multicast_global.cnk \
	--svchost ${VPATH}/pers.svchost \
	--script runFpga \
	--fctestdir /bgq/data/usr/sameerk/fpga/ \
	--maxtime 10000000000 \
	--numcores 1 \
	$(parms)
